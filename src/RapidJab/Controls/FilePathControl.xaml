<UserControl x:Class="RapidJab.Controls.FilePathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RapidJab.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
  <StackPanel>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="25"></ColumnDefinition>
      </Grid.ColumnDefinitions>

      <TextBox Grid.Column="0" Style="{StaticResource PlaceHolder}" Tag="Dolphin File Path"></TextBox>
      <Button Grid.Column="1" Name="FileBrowser" Margin="5,0,0,0">...</Button>
    </Grid>
  </StackPanel>
</UserControl>

